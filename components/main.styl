@require("@macrostrat/ui-components/lib/index.css")
@require("@blueprintjs/core/lib/css/blueprint.css")

h1 {
  color: black;
}

span.subtitle {
  color: #888;
  font-style: italic;
  font-weight: 200;
}

h2 {
  color: #888;
}

html, body {
  font-family: "Helvetica Neue", Helvetica, sans-serif;
  font-size: 17px
}

#main {
  width: 40em;
  margin: 0 auto;
}

nav ul {
  list-style: none;
  padding-left: 0;
  display: flex;
  flex-direction: row;
}

nav ul li {
  margin-right: 1em;
}



.main-search {
  margin-bottom: 2em;
}



li a.active {
  background-color: #ccc;
  font-weight: bold;
}

nav li a {
  font-size: 1.2em;
  text-decoration: none;
  padding: 0.2em 0.5em;
  border-radius: 4px;
  display: block;
}
