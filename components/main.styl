@require("~@macrostrat/ui-components/lib/index.css")
@require("~@blueprintjs/core/lib/css/blueprint.css")

header
  display flex
  flex-direction row
  margin-top 2em
  .logo
    margin-right 2rem
  h1, h3
    margin-top 0
    margin-bottom 0
    line-height: 1em
  .page-title
    display flex
    flex-direction row
    align-items: last-baseline
    margin-top 1em
    h1
      font-size 2.8em
      line-height 1em
      margin-right 2rem
    h3
      line-height 1em

h1 {
  color: black;
}

span.subtitle {
  color: #888;
  font-style: italic;
  font-weight: 200;
}

h2 {
  color: #888;
}

html, body {
  font-family: "Helvetica Neue", Helvetica, sans-serif;
  font-size: 17px
  margin 0
}

#main
  width: 50em
  min-height 100vh
  margin: 0 auto
  display flex
  flex-direction column
  &>.page-body
    flex-grow 1

nav ul {
  list-style: none;
  padding-left: 0;
  display: flex;
  flex-direction: row;
}

nav ul li {
  margin-right: 1em;
}

.main-search {
  margin-bottom: 2em;
}

li a.active {
  background-color: #ccc;
  font-weight: bold;
}

nav li a {
  font-size: 1.2em;
  text-decoration: none;
  padding: 0.2em 0.5em;
  border-radius: 4px;
  display: block;
}

em.hl {
  background-color: yellow;
}

footer
  margin-bottom 1em
  color #666
  font-size 0.8em
