@require "../../styles/colors.styl"


.known-terms {
    padding: 10px;
    display: flex;
    flex-direction: column;
    margin-left 10px
}

.known-terms
    width 35vw

.list-container
    margin-top 15px
    display flex
    align-items center
    flex-direction column
    overflow-y auto

.list 
    list-style none
    margin 0
    margin-bottom 15px
    padding 0
    display flex
    flex-direction column
    align-items center

.collapse-body
    max-height 150px
    align-items start
    width 80%
    overflow-y auto

.term-tag
    background-color $secondary-dark
    color $white
    width 90%
    text-align center
    margin 5px
    &:hover
        cursor pointer
        background-color $middle-hue

.terms-stack {
    height: 70vh;
    width: 100%;
}
.half-tag {
    width: 40%;
}

.terms-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
    overflow-y: auto;
}


